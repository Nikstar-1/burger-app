<div class="container" style="background-color: black;">
  <img src="/assets/Best-Burger.jpg" class="center" alt="Burger Image"/>
  <div class="jumbotron">
    <h1 style="text-align:center;"> Order Your Burger</h1>
  <div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/burgers/createburger" method="POST">
				<input type="text" class="form-control" name="burger_name" id="enter_text">
				<button type="submit" class="btn btn-secondary" id="text-enter-button">Submit</button>
			</form>
		</div>
	</div>
</div>
  
  </div>
  <div class="row justify-content-around text-center px-3">
    <div class="col-12 col-md-5 wait-container">
      <h4 style="color: green">Burgers Ordered </h4>
      <div class="row">
        {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="col-md-9 text-center">
          <pre>{{this.burger_name}}
					</pre>
        </div>
        <div class="col-md-3 text-center">
          <form class="devour-form button-size">
            <input type="hidden" size="50" class="burger_id" type="text" value={{this.id}}><br>
            <button type="submit" class="btn btn-secondary" id="text-enter-button">Devour it!</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-12 col-md-5 devoured-container">
      <h4 style="color: green">Burgers Devoured </h4>
      <div class="row">
        {{#each burger_data}}
        {{#if this.devoured}}
        <div class="text-center">
          <pre>{{this.burger_name}}
					</pre>
        </div>
        {{/if}}
        {{/each}}
         <form action ="/deleteOne/{{this.id}}" method="POST">
              <button type="submit" class="btn btn-secondary" id="text-enter-button">Delete</button>
             </form>
             <h2>Burgers that are deleted!</h2>

             <ul>
               {{#each burgers}}
               {{#if this.devoured}}
               {{> burger-block devoured=false}}
               {{/if}}
               {{/each}}
             </ul>
      </div>
    </div>
  </div>
</div>

