<div class="container">
  <img src="public/assets/Best-Burger.jpg" class="img-fluid" alt="Burger Image">
  <div class="jumbotron">
    <h1 style="text-align:center;"> Order Your Burger</h1>
    <section>
      <input type="text" id="enter-burger" name="burger_name" class="form-control" placeholder="Type your Order...">
      <button type="button" class="btn btn-warning">Submit</button>
  </div>
  <div class="row justify-content-around text-center px-3">
    <div class="col-12 col-md-5 wait-container">
      <h4>Burgers Ordered </h4>
      <div class="row">
        {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="col-md-9 text-center">
          <pre>{{this.burger_name}}
					</pre>
        </div>
        <div class="col-md-3 text-center">
          <form class="devour-form button-size">
            <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
            <button type="submit" class="btn btn-default">Devour it!</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-12 col-md-5 devoured-container">
      <h4>Burgers Devoured </h4>
      <div class="row">
        {{#each burger_data}}
        {{#if this.devoured}}
        <div class="text-center">
          <pre>{{this.burger_name}}
					</pre>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>